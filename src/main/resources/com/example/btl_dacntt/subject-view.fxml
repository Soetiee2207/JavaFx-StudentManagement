<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.btl_dacntt.controller.SubjectController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="QUẢN LÝ MÔN HỌC" textFill="#2c3e50">
        <font><Font name="System Bold" size="20.0" /></font>
    </Label>

    <TableView fx:id="tableSubject" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" prefWidth="100.0" text="Mã Môn" />
            <TableColumn fx:id="colName" prefWidth="250.0" text="Tên Môn Học" />
            <TableColumn fx:id="colCredits" prefWidth="100.0" text="Số Tín Chỉ" />
        </columns>
    </TableView>

    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <TextField fx:id="txtId" promptText="Mã môn (VD: MH001)" prefWidth="120"/>
        <TextField fx:id="txtName" promptText="Tên môn học" prefWidth="250"/>
        <TextField fx:id="txtCredits" promptText="Số TC" prefWidth="80"/>
    </HBox>

    <HBox spacing="10.0">
        <Button onAction="#handleAdd" text="Thêm" style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
        <Button onAction="#handleUpdate" text="Sửa" style="-fx-background-color: #f39c12; -fx-text-fill: white;"/>
        <Button onAction="#handleDelete" text="Xóa" style="-fx-background-color: #c0392b; -fx-text-fill: white;"/>
        <Button onAction="#handleClear" text="Làm mới" />
    </HBox>
</VBox>