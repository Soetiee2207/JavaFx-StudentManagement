<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER"
      spacing="20.0"
      xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/17"
      fx:controller="com.example.btl_dacntt.controller.RegisterController"
      style="-fx-background-color: #f0f2f5;">

    <padding>
        <Insets bottom="20.0"
                left="20.0"
                right="20.0"
                top="20.0"/>
    </padding>

    <Label
            text="ĐĂNG KÝ TÀI KHOẢN"
            textFill="#2c3e50">
        <font>
            <Font
                    name="Segoe UI Bold"
                    size="24.0"/>
        </font>
    </Label>

    <VBox
            alignment="CENTER_LEFT"
            maxWidth="350.0"
            spacing="10.0"
            style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 0);">

        <padding>
            <Insets bottom="30.0"
                    left="30.0"
                    right="30.0"
                    top="30.0"/>
        </padding>

        <Label text="Tên đăng nhập:">
            <font>
                <Font name="Segoe UI" size="14.0"/>
            </font>
        </Label>
        <TextField
                fx:id="txtUsername"
                promptText="Nhập username (ít nhất 4 ký tự)"
                style="-fx-font-size: 14;"/>

        <Label text="Mật khẩu:">
            <font>
                <Font name="Segoe UI" size="14.0"/>
            </font>
        </Label>
        <PasswordField
                fx:id="txtPassword"
                promptText="Nhập password (ít nhất 6 ký tự)"
                style="-fx-font-size: 14;"/>

        <Label text="Xác nhận mật khẩu:">
            <font>
                <Font name="Segoe UI" size="14.0"/>
            </font>
        </Label>
        <PasswordField
                fx:id="txtConfirmPassword"
                promptText="Nhập lại password"
                style="-fx-font-size: 14;"/>

        <Label text="Vai trò:">
            <font>
                <Font name="Segoe UI" size="14.0"/>
            </font>
        </Label>
        <ComboBox
                fx:id="cboRole"
                maxWidth="Infinity"
                style="-fx-font-size: 14;"/>

        <!-- Teacher Info Section - Hidden by default -->
        <VBox fx:id="teacherInfoSection" spacing="10.0" visible="false" managed="false">
            <Label text="Mã Giáo Viên:">
                <font>
                    <Font name="Segoe UI" size="14.0"/>
                </font>
            </Label>
            <TextField
                    fx:id="txtTeacherId"
                    promptText="VD: TC005"
                    style="-fx-font-size: 14;"/>

            <Label text="Họ và Tên:">
                <font>
                    <Font name="Segoe UI" size="14.0"/>
                </font>
            </Label>
            <TextField
                    fx:id="txtFullName"
                    promptText="Nhập họ và tên đầy đủ"
                    style="-fx-font-size: 14;"/>

            <Label text="Email:">
                <font>
                    <Font name="Segoe UI" size="14.0"/>
                </font>
            </Label>
            <TextField
                    fx:id="txtEmail"
                    promptText="VD: email@dh.edu.vn"
                    style="-fx-font-size: 14;"/>
        </VBox>

        <Button
                text="ĐĂNG KÝ"
                maxWidth="Infinity"
                style="-fx-background-color: #42b72a; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"
                onAction="#register">
            <VBox.margin>
                <Insets top="15.0"/>
            </VBox.margin>
        </Button>

        <Label
                fx:id="lblMessage"
                textFill="red"
                visible="false"
                wrapText="true"/>

        <HBox alignment="CENTER" spacing="5.0">
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
            <Label text="Đã có tài khoản?">
                <font>
                    <Font name="Segoe UI" size="13.0"/>
                </font>
            </Label>
            <Button
                    text="Đăng nhập"
                    style="-fx-background-color: transparent; -fx-text-fill: #1877f2; -fx-cursor: hand; -fx-underline: true;"
                    onAction="#goToLogin"/>
        </HBox>
    </VBox>

    <Label
            text="Phiên bản 1.0 - Code by Soetiee"
            textFill="#888888"/>
</VBox>
